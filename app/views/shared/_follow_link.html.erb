<div style="margin-top: 10px;">
  <% if @user.already_followed_by?(current_user) %>
    <%= link_to "( - ) Unfollow #{@user.full_name}'s posts", unfollow_user_path(@user), :remote => true %>
  <% else %>
    <%= link_to "( + ) Follow #{@user.full_name}'s posts", follow_user_path(@user), :remote => true %>
  <% end %>
</div>