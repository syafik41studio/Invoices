<% if @message.errors.any? -%>
  /*Update the html of the div post_errors with the new one*/
  $("#message_errors").html("<%= escape_javascript(error_messages_for(@message))%>");

  /*Show the div post_errors*/
  $("#message_errors").show(300);
<% else -%>
  $('<%= escape_javascript(render :partial => "show") %>').appendTo("#list-messages");
<% end -%>
