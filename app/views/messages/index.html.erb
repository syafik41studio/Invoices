<h2>Messages</h2>
<div style="float:left;width:120px;">
  <%= link_to "New message", new_message_path, :remote => true %>
</div>
<div style="float:left;">
  <% form_tag(search_messages_path, :remote => true) do %>
    Search   <%= autocomplete_field_tag "search_message", "",autocomplete_user_email_messages_path, :as => :autocomplete %>
  <% end %>
</div>
<div style="clear:both;"></div>
<div id="result-search-message"></div>
<div id="new-message"></div>
<div id="list-messages"></div>
<% @messages.each do |message| %>
  <%= link_to message.sender.email, message_path(message.sender), :remote => true %>
<% end %>