<% simple_form_for(@message, :remote => true) do |f| %>
  <div id= "message_errors" style="display:none"></div>
  <%= autocomplete_field :message_recipient ,:email, autocomplete_user_email_messages_path, :as => :autocomplete %>
  <%= f.input :message, :rows => 2 %>
  <%= f.button :submit, :value => "Send" %>
<% end %>