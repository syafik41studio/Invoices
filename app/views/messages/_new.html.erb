<% simple_form_for(@message, :remote => true) do |f| %>
  <div id= "message_errors" style="display:none"></div>
  Recipient : <%= autocomplete_field :message_recipient ,:email, autocomplete_user_email_messages_path, :as => :autocomplete %> <br />
  Message : <%= f.input :message, :rows => 2 , :label => false%>
  <%= f.button :submit, :value => "Send" %> | <%= link_to "Cancel", "#", :id => "cancel-new-messsage" %>
<% end %>
