<%= simple_form_for @comment, :url => create_comment_post_path(@post), :html => {:class => "yform"} do |f| %>
  <%= f.input :user_id, :as => :hidden, :input_html => {:value => current_user.id} %>
  <%= f.input :commentable_id, :as => :hidden, :input_html => {:value => @post.id} %>
  <%= f.input :commentable_type, :as => :hidden, :input_html => {:value => @post.class.to_s} %>
  <%= f.input :comment, :as => :text, :input_html => {:rows => 10, :cols => 100 } %>
  <br />
  <%= f.submit "Comment" %>
<% end %>