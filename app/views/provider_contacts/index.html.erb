<div class="subcolumns">
  <% if is_my_profile?(@user) %>
    <%= link_to "New", new_user_provider_contact_path %> |
  <% end %>
  <%= link_to "Back", user_path(@user) %>
</div>
<table  class="full" >
  <caption><em>List of Contacts</em></caption>
  <thead>
    <tr>
      <th>&nbsp</th>
      <th>&nbsp;</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Relation</th>
      <th>Primary?</th>
    </tr>
  </thead>
  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= link_to "Edit", edit_user_provider_contact_path(@user, contact) %></td>
        <td>
          <% if contact.photo_file_name.present? %>
            <%= image_tag contact.photo.url(:thumb) %>
          <% else %>
            <%= image_tag '/images/photo.png',:size=>"75x75" %>
          <% end %>
        </td>
        <td><%= contact.firstname %></td>
        <td><%= contact.lastname %></td>
        <td><%= contact.relatedas %></td>
        <td><% if contact.isprimary %>Yes<% end %></td>
      </tr>
    <% end %>
  </tbody>
  <tbody>
    <tr>
      <td colspan="5">
        <% if is_my_profile?(@user) %>
          <%= link_to "New", new_user_provider_contact_path %> |
        <% end %>
        <%= link_to "Back", user_path(@user) %>
      </td>
    </tr>
  </tbody>
</table>